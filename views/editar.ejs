<%- include("partials/header") %>
<div class="container">
    <div class="row">
           <div class="col-md-5 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        <form action="/editar/<%= contacto._id%>" method="post">
                            <div class="form-group">
                                <input type="text" name="nombre" placeholder="Nombre(s)" class="form-control" required value="<%= contacto.nombre%>">
                                <input type="text" name="apellido" placeholder="Apellidos" class="form-control" required value="<%= contacto.apellido%>">
                                <input type="number" name="telefono" placeholder="Ej. 5555555555" class="form-control" required value="<%= contacto.telefono%>">
                                <input type="email" name="email" placeholder="Ej. tucorreo@mail.com" class="form-control" required value="<%= contacto.email%>">
                                <button type="submit" class="btn btn-primary btn-block">
                                    Editar
                                </button>                                 
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    </div>
</div>

 <%- include("partials/footer") %>
